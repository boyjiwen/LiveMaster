<Window x:Class="ObsMaster.Dialog.WinCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObsMaster.Dialog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="WinCaptureDialog" Height="280" Width="360" >
    <Grid>
        <ListBox ItemsSource="{Binding VCaptureWindowItems}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Width="240" Height="28" 
                            Content="{Binding Name}" Tag="{Binding}"
                            Click="OnWindowClicked"/>
                </DataTemplate>
            </ListBox.ItemTemplate>            
        </ListBox>
        
    </Grid>
</Window>
