<Window x:Class="ObsMaster.Dialog.CreateSceneDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObsMaster.Dialog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="创建场景" Height="240" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid VerticalAlignment="Center" Margin="15,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock FontSize="12" Text="名称" Margin="0,0,8,0" />
            <TextBox x:Name="TbScene" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" />
        </Grid>

        <Grid Grid.Row="1" Margin="15,0" HorizontalAlignment="Right" >
            <Button x:Name="OkButton" Width="100" Height="28" FontSize="12"
                    Content="确认"/>
        </Grid>
        
    </Grid>
</Window>
