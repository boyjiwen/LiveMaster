<Window x:Class="ObsMaster.Dialog.MonitorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ObsMaster.Dialog"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="MonitorDialog" Height="280" Width="360">
    <Grid>
        <ItemsControl ItemsSource="{Binding VMonitorItems}" >
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Width="240" Height="28"
                            Content="{Binding Name}" Tag="{Binding }"
                            Click="OnButtonClicked"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
    </Grid>
</Window>
